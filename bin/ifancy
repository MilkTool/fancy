#!/usr/bin/env fancy

["Welcome to the (still very simple) Fancy REPL",
 "Fancy " ++ FANCY_VERSION] println;

self loop: {
  try {
    Console readln: ">> " . if_do: |line| {
      line eval_global inspect println
    } else: {
      System exit
    }
  } catch StdError => e {
    e message println
  }
}
